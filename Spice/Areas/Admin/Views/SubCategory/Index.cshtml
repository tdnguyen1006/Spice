@model IEnumerable<SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

<br />
<div class="border bgWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub-Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> &nbsp; Add New Sub-Category</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Category.Name)
                    </td>
                    <td style="width:150px" class="text-right">
                        <div class="btn-group" role="group">
                            <a class="btn btn-info text-white" asp-action="Edit" asp-route-Id="@item.Id"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id"><i class="fa fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub-Category.</p>
        }
    </div>
</div>

