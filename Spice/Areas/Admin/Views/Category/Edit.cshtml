@model  Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="border bgWhite">
    <div>
        <h2 class="text-info">Edit Category</h2>
    </div>
    <br />
    <div>
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-2">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-success form-control" asp-route-Id="@Model.Id" value="Edit" />
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-danger form-control">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>